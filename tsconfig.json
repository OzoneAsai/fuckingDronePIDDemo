{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "types": ["svelte"],
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/**/*.svelte"],
  "exclude": ["node_modules/*"]
}
